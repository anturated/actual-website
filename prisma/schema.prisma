generator client {
  // provider = "prisma-client"
  // output   = "../lib/generated/prisma"
  provider   = "prisma-client-js"
  engineType = "wasm"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  passwordHash String
  perms        String[] @default([])
  avatar       Avatar?
  description  String?

  sessionInvalidated Boolean     @default(false)
  notes              Note[]
  workHours          WorkHours[]

  apiKeyHash String?    @unique
  blogPosts  BlogPost[]
  likes      Like[]
  comments   Comment[]
}

model Note {
  id String @id @default(uuid())

  owner    User    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId  String
  isPublic Boolean
  slug     String  @unique

  title String
  text  String  @default("")
  done  Boolean @default(false)
}

model WorkHours {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  date    DateTime
  seconds Float

  @@unique([userId, date])
}

model BlogPost {
  id String @id @default(uuid())

  title    String
  text     String?
  slug     String    @unique
  likes    Like[]
  comments Comment[]

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Like {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  post   BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String

  @@unique([userId, postId])
}

model Comment {
  id   String @id @default(uuid())
  text String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  post   BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String
}

model Avatar {
  id       String @id @default(uuid())
  mimeType String
  data     Bytes
  userId   String @unique
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
