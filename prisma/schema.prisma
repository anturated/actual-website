generator client {
  // provider = "prisma-client"
  // output   = "../lib/generated/prisma"
  provider   = "prisma-client-js"
  engineType = "wasm"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  passwordHash String
  apiKeyHash   String?  @unique
  perms        String[] @default([])
  avatar       Avatar?
  description  String?

  sessionInvalidated Boolean     @default(false)
  notes              Note[]
  workHours          WorkHours[]

  blogPosts BlogPost[]
  likes     Like[]
  comments  Comment[]

  memberProjects Project[] @relation("ProjectMembers")
  ownedProjects  Project[] @relation("ProjectOwner")
  ownedCards     Card[]    @relation("CardOwner")
  assignedCards  Card[]    @relation("CardAssigned")
}

model Note {
  id String @id @default(uuid())

  owner    User    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId  String
  isPublic Boolean
  slug     String  @unique

  title String
  text  String  @default("")
  done  Boolean @default(false)
}

model WorkHours {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  date    DateTime
  seconds Float

  @@unique([userId, date])
}

model BlogPost {
  id String @id @default(uuid())

  title    String
  text     String?
  slug     String    @unique
  likes    Like[]
  comments Comment[]

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Like {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  post   BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String

  @@unique([userId, postId])
}

model Comment {
  id   String @id @default(uuid())
  text String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  post   BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String
}

model Avatar {
  id       String @id @default(uuid())
  mimeType String
  data     Bytes
  userId   String @unique
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// kanban stuff

model Project {
  id          String     @id @default(uuid())
  title       String
  slug        String     @unique
  bg          ProjectBG? @relation(fields: [projectBGId], references: [id], onDelete: Cascade)
  projectBGId String?

  cardTags CardTag[]
  columns  Column[]

  owner   User   @relation("ProjectOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId String

  members User[] @relation("ProjectMembers")
  cards   Card[]
}

model ProjectBG {
  id       String @id @default(uuid())
  mimeType String
  data     Bytes

  projects Project[]
}

model Column {
  id        String  @id @default(uuid())
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String

  title String
  cards Card[]
}

model Card {
  id        String  @id @default(uuid())
  column    Column  @relation(fields: [columnId], references: [id], onDelete: Cascade)
  columnId  String
  project   Project @relation(fields: [projectId], references: [id])
  projectId String // this is here for slugs
  owner     User    @relation("CardOwner", fields: [ownerId], references: [id])
  ownerId   String
  assigned  User[]  @relation("CardAssigned")

  title String
  slug  String
  text  String    @default("")
  tags  CardTag[]

  @@unique([projectId, slug])
}

model CardTag {
  id        String  @id @default(uuid())
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String

  name  String
  color String @default("#333")
  cards Card[]
}
